@model List<AkademiPlus_Transportation.Models.TBL_Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper pb-0">
    <div class="page-header flex-wrap">
        <h3 class="mb-0">
            Merhaba, Tekrar Hoşgeldiniz ! <span class="pl-0 h6 pl-sm-2 text-muted d-inline-block"></span>
        </h3>
        <div class="d-flex">
            <button type="button" class="btn btn-sm bg-white btn-icon-text border">
                <i class="mdi mdi-email btn-icon-prepend"></i> Mail
            </button>
            <button type="button" class="btn btn-sm bg-white btn-icon-text border ml-3">
                <i class="mdi mdi-printer btn-icon-prepend"></i> Yazdır
            </button>
            <button type="button" class="btn btn-sm ml-3 btn-success"> Kullanıcı Ekle </button>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-3 col-lg-12 stretch-card grid-margin">
            <div class="row">

                <div class="col-xl-12 col-md-6 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
                    <div class="card bg-warning">
                        <div class="card-body px-3 py-4">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="color-card">
                                    <p class="mb-0 color-card-head">Toplam Kullanıcı Sayısı</p>
                                    <h2 class="text-white">
                                        @ViewBag.Count   <span class="h5"></span>
                                    </h2>
                                </div>
                                <i class="card-icon-indicator mdi mdi-basket bg-inverse-icon-warning"></i>
                            </div>
                            <h6 class="text-white"></h6>
                        </div>
                    </div>
                </div>
                <div class="col-xl-12 col-md-6 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
                    <div class="card bg-danger">
                        <div class="card-body px-3 py-4">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="color-card">
                                    <p class="mb-0 color-card-head">Toplam Ürün Sayısı</p>
                                    <h2 class="text-white">
                                        @ViewBag.CountProduct  <span class="h5"></span>
                                    </h2>
                                </div>
                                <i class="card-icon-indicator mdi mdi-cube-outline bg-inverse-icon-danger"></i>
                            </div>
                            <h6 class="text-white"></h6>
                        </div>
                    </div>
                </div>
                <div class="col-xl-12 col-md-6 stretch-card grid-margin grid-margin-sm-0 pb-sm-3 pb-lg-0 pb-xl-3">
                    <div class="card bg-primary">
                        <div class="card-body px-3 py-4">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="color-card">
                                    <p class="mb-0 color-card-head">Toplam Müşteri Sayısı</p>
                                    <h2 class="text-white">
                                        @ViewBag.CountCustomer<span class="h5"></span>
                                    </h2>
                                </div>
                                <i class="card-icon-indicator mdi mdi-briefcase-outline bg-inverse-icon-primary"></i>
                            </div>
                            <h6 class="text-white"></h6>
                        </div>
                    </div>
                </div>
                <div class="col-xl-12 col-md-6 stretch-card pb-sm-3 pb-lg-0">
                    <div class="card bg-success">
                        <div class="card-body px-3 py-4">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="color-card">
                                    <p class="mb-0 color-card-head">Toplam Kategori Sayısı</p>
                                    <h2 class="text-white">@ViewBag.CategoryCount</h2>
                                </div>
                                <i class="card-icon-indicator mdi mdi-account-circle bg-inverse-icon-success"></i>
                            </div>
                            <h6 class="text-white"></h6>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
        <div class="col-xl-9 stretch-card grid-margin">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-7">
                            <h5>Site Raporu</h5>
                            <p class="text-muted">
                            
                            </p>
                        </div>
                        <div class="col-sm-5 text-md-right">
                            <button type="button" class="btn btn-icon-text mb-3 mb-sm-0 btn-inverse-primary font-weight-normal">
                                <i class="mdi mdi-email btn-icon-prepend"></i>Raporu İndir
                            </button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="card mb-3 mb-sm-0">
                                <div class="card-body py-3 px-4">
                                    <p class="m-0 survey-head">Anlık Ziyaretçi</p>
                                    <div class="d-flex justify-content-between align-items-end flot-bar-wrapper">
                                        <div>
                                            <h3 class="m-0 survey-value">7</h3>
                                            <p class="text-success m-0"></p>
                                        </div>
                                        <div id="earningChart" class="flot-chart"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="card mb-3 mb-sm-0">
                                <div class="card-body py-3 px-4">
                                    <p class="m-0 survey-head">Aylık Ziyaretçi</p>
                                    <div class="d-flex justify-content-between align-items-end flot-bar-wrapper">
                                        <div>
                                            <h3 class="m-0 survey-value">760</h3>
                                            <p class="text-danger m-0"></p>
                                        </div>
                                        <div id="productChart" class="flot-chart"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="card">
                                <div class="card-body py-3 px-4">
                                    <p class="m-0 survey-head">Toplam Ziyaretçi</p>
                                    <div class="d-flex justify-content-between align-items-end flot-bar-wrapper">
                                        <div>
                                            <h3 class="m-0 survey-value">4,354</h3>
                                            <p class="text-success m-0"></p>
                                        </div>
                                        <div id="orderChart" class="flot-chart"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row my-3">
                        <div class="col-sm-12">
                            <div class="flot-chart-wrapper">
                                <div id="flotChart" class="flot-chart">
                                    <canvas class="flot-base"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-xl-4 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title text-black">Yapılacaklar Listesi</h4>
                    <p class="text-muted"></p>
                    <div class="list-wrapper">
                        <ul class="d-flex flex-column-reverse todo-list todo-list-custom">
                            <li>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input class="checkbox" type="checkbox" /> Design Patterns Araştırma Yap
                                    </label>
                                    <span class="list-time">2 Gün Önce</span>
                                </div>
                            </li>
                            <li>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input class="checkbox" type="checkbox" /> Yeni Projeye Başla
                                    </label>
                                    <span class="list-time">1 Gün Önce</span>
                                </div>
                            </li>
                            <li class="completed">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input class="checkbox" type="checkbox" checked /> Ders Kayıtlarını İzle
                                    </label>
                                    <span class="list-time">8 Saat Önce</span>
                                </div>
                            </li>
                            <li>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input class="checkbox" type="checkbox" /> Siteyi Düzenle ve Yayınla
                                    </label>
                                    <span class="list-time">1 Saat Önce</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="add-items d-flex flex-wrap flex-sm-nowrap">
                        <input type="text" class="form-control todo-list-input flex-grow" placeholder="Görev Ekle" />
                        <button class="add btn btn-primary font-weight-regular text-nowrap" id="add-task"> Ekle </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-md-6 grid-margin stretch-card">
            <div class="card card-calender">
                <div class="card-body">
                    <div class="row pt-4">
                        <div class="col-sm-6">
                            <h1 class="text-white">10:16</h1>
                            <h5 class="text-white">15 Mart Çarşamba, 2023</h5>
                            <h5 class="text-white pt-2 m-0">Yağış:11%</h5>
                            <h5 class="text-white m-0">Nem:63%</h5>
                            <h5 class="text-white m-0">Rüzgar:8 km/s</h5>
                        </div>
                        <div class="col-sm-6 text-sm-right pt-3 pt-sm-0">
                            <h3 class="text-white">Çok Bulutlu</h3>
                            <p class="text-white m-0">Istanbul, Türkiye</p>
                            <h3 class="text-white m-0">12°C</h3>
                        </div>
                    </div>
                    <div class="row mt-5">
                        <div class="col-sm-12">
                            <ul class="d-flex pl-0 overflow-auto">
                                <li class="weakly-weather-item text-white font-weight-medium text-center active">
                                    <p class="mb-0">Bugün</p>
                                    <i class="mdi mdi-weather-cloudy"></i>
                                    <p class="mb-0">14<span class="symbol">°c</span></p>
                                </li>
                                <li class="weakly-weather-item text-white font-weight-medium text-center">
                                    <p class="mb-0">Perşembe</p>
                                    <i class="mdi mdi-weather-hail"></i>
                                    <p class="mb-0">12<span class="symbol">°c</span></p>
                                </li>
                                <li class="weakly-weather-item text-white font-weight-medium text-center">
                                    <p class="mb-0">Cuma</p>
                                    <i class="mdi mdi-weather-cloudy"></i>
                                    <p class="mb-0">8<span class="symbol">°c</span></p>
                                </li>
                                <li class="weakly-weather-item text-white font-weight-medium text-center">
                                    <p class="mb-0">Cumartesi</p>
                                    <i class="mdi mdi-weather-fog"></i>
                                    <p class="mb-0">8<span class="symbol">°c</span></p>
                                </li>
                                <li class="weakly-weather-item text-white font-weight-medium text-center">
                                    <p class="mb-0">Pazar</p>
                                    <i class="mdi mdi-weather-hail"></i>
                                    <p class="mb-0">10<span class="symbol">°c</span></p>
                                </li>
                                <li class="weakly-weather-item text-white font-weight-medium text-center">
                                    <p class="mb-0">Pazartesi</p>
                                    <i class="mdi mdi-weather-cloudy"></i>
                                    <p class="mb-0">11<span class="symbol">°c</span></p>
                                </li>
                                <li class="weakly-weather-item text-white font-weight-medium text-center">
                                    <p class="mb-0">Salı</p>
                                    <i class="mdi mdi-weather-hail"></i>
                                    <p class="mb-0">13<span class="symbol">°c</span></p>
                                </li>
                                <li class="weakly-weather-item text-white font-weight-medium text-center">
                                    <p class="mb-0">Çarşamba</p>
                                    <i class="mdi mdi-weather-cloudy"></i>
                                    <p class="mb-0">14<span class="symbol">°c</span></p>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div id="inline-datepicker" class="datepicker table-responsive"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-8 grid-margin stretch-card">
            
        </div>
        <div class="col-xl-4 grid-margin stretch-card">
            <!--activity-->
            
            <!--activity ends-->
        </div>
    </div>
    
</div>
